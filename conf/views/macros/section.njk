{% from "govuk/components/summary-list/macro.njk"  import govukSummaryList %}

{% macro section(sectionTitle, rows, href) %}

  {% if rows | length %}

    <div class="govuk-summary-sectionRows__row">
  
      {% if sectionTitle %}
        <h2 class="govuk-heading-m">{{ sectionTitle }}</h2>
      {%  endif %}
  
      {{ govukSummaryList({
        rows: rows,
        classes:"govuk-summary-list govuk-!-margin-bottom-9"
      }) }}

      {% if href %}
        <p class="govuk-body">
            <a href={{ href }}>Add or remove packages</a>
        </p>
      {%  endif %}
    </div>
  
  {% endif %}
{% endmacro %}
