{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/input/macro.njk"         import govukInput %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}
{% from "govuk/components/select/macro.njk"        import govukSelect %}

{% block pageTitle %}
  {{ title(messages("nationalityCrossingBorder.title"), form.errors) }}
{% endblock %}

{% block pageHead %}
  <!--[if gt IE 8]><!-->
  <link href="{{ routes.controllers.Assets.versioned("stylesheets/accessible-autocomplete.min.css").url }}" media="screen" rel="stylesheet" type="text/css" />
  <!--<![endif]-->
{% endblock %}

{% block mainContent %}

  {{ govukBackLink({
    text: messages("site.back")
  }) }}

  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

        <form action="{{ routes.controllers.transportDetails.NationalityCrossingBorderController.onSubmit(lrn, mode).url }}" method="post">
        <fieldset>
        <span class="govuk-caption-xl">{{messages('transportDetails.preHeading')}}</span>

          {{ csrf() | safe }}
          <legend>
            <h1 class="govuk-heading-xl">
              {{ messages("nationalityCrossingBorder.heading") }}
            </h1>
           </legend>


                  {{ govukSelect({
                                      classes: "govuk-input--width-20 autocomplete",
                                      id: "value",
                                      name: "value",
                                      errorMessage: form.value.error,
                                      items: countries
                                    }) }}
          {{ govukButton({
            text: messages("site.continue"),
            attributes: {id:"submit"}
          }) }}

        </fieldset>
        </form>

      </div>
    </div>
  </div>

{% endblock %}

{% block pageScripts %}
  <script src="{{ routes.controllers.Assets.versioned("javascripts/accessible-autocomplete.js").url }}"></script>
{% endblock %}
