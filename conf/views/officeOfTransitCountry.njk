{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/select/macro.njk"        import govukSelect %}
{% from "govuk/components/input/macro.njk"         import govukInput %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages("officeOfTransitCountry.title"), form.errors) }}
{% endblock %}

{% block pageHead %}
  <!--[if gt IE 8]><!-->
  <link href="{{ routes.controllers.Assets.versioned("stylesheets/accessible-autocomplete.min.css").url }}" media="screen" rel="stylesheet" type="text/css" />
  <!--<![endif]-->
{% endblock %}

{% block mainContent %}

  {{ govukBackLink({
    text: messages("site.back")
  }) }}

  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

        <span class="govuk-caption-xl">{{messages('routeDetails.preHeading')}}</span>

        <h1 class="govuk-heading-xl">
          {{ messages("officeOfTransitCountry.heading") }}
        </h1>

        <form action="{{ routes.controllers.routeDetails.OfficeOfTransitCountryController.onSubmit(lrn, mode).url }}" method="post">
        <fieldset>
        <p class="govuk-body">{{ messages('officeOfTransitCountry.paragraph') }}</p>

          {{ csrf() | safe }}
          <legend>
          {{ govukSelect({
            classes: "govuk-input--width-20
            autocomplete",
            id: "value",
            name: "value",
            value: form.value.value,
            errorMessage: form.value.error,
            items: countries
          }) }}
          </legend>

          {{ govukButton({
            text: messages("site.continue"),
            attributes: {id:"submit"}
          }) }}

        </fieldset>
        </form>

      </div>
    </div>
  </div>

{% endblock %}

{% block pageScripts %}
  <script src="{{ routes.controllers.Assets.versioned("javascripts/accessible-autocomplete.js").url }}"></script>
{% endblock %}
