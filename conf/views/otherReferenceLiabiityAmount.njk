{% extends "includes/layout.njk" %}

{% from "macros/hmrc-input--currency/macro.njk" import hmrcInputCurrency with context %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/input/macro.njk"         import govukInput %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages("otherReferenceLiabiityAmount.title"), form.errors) }}
{% endblock %}

{% block mainContent %}

  {{ govukBackLink({
    text: messages("site.back")
  }) }}

  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

         <form action="{{ routes.controllers.guaranteeDetails.LiabilityAmountController.onSubmit(lrn, mode).url }}" method="post">
         <span class="govuk-caption-xl">{{messages('guaranteeDetails.preHeading')}}</span>

          {{ csrf() | safe }}


          <h1 class="govuk-heading-xl"> {{messages('liabilityAmount.heading')}}<h1>
          <p class="govuk-body"> {{messages('liabilityAmount.paragraph')}}<p>

               {{ hmrcInputCurrency({
                      name: "value",
                      id: "value",
                      classes: "govuk-input--width-10",
                      autocomplete: "off",
                      type: "tel"
                    })
                  }}


          {{ govukButton({
            text: messages("site.continue"),
            attributes: {id:"submit"}
          }) }}

        </form>

      </div>
    </div>
  </div>

{% endblock %}
