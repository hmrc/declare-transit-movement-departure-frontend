{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/input/macro.njk"         import govukInput %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages("consignorAddress.title"), form.errors) }}
{% endblock %}

{% block mainContent %}

  {{ govukBackLink({
    text: messages("site.back")
  }) }}

  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

        <form action="{{ routes.controllers.ConsignorAddressController.onSubmit(lrn, mode).url }}" method="post">
        <span class="govuk-caption-xl">{{messages('traderDetails.preHeading')}}</span>

          {{ csrf() | safe }}

        <h1 class="govuk-heading-xl">
          {{ messages("consignorAddress.heading", consignorName) }}
        </h1>

          {{ govukInput({
            label: {
              text: messages('consignorAddress.AddressLine1')
            },
            id: "AddressLine1",
            name: "AddressLine1",
            value: form.AddressLine1.value,
            errorMessage: form.AddressLine1.error
          }) }}

          {{ govukInput({
            label: {
              text: messages('consignorAddress.AddressLine2')
            },
            id: "AddressLine2",
            name: "AddressLine2",
            value: form.AddressLine2.value,
            errorMessage: form.AddressLine2.error
          }) }}

          {{ govukInput({
            label: {
              text: messages('consignorAddress.AddressLine2')
            },
            id: "AddressLine3",
            name: "AddressLine3",
            value: form.AddressLine3.value,
            errorMessage: form.AddressLine3.error
          }) }}

          {{ govukInput({
            label: {
              text: messages('consignorAddress.AddressLine4')
             },
             id: "AddressLine4",
             name: "AddressLine4",
             value: form.AddressLine4.value,
             errorMessage: form.AddressLine4.error
             }) }}

          {{ govukButton({
            text: messages("site.continue"),
              attributes: {id:"submit"}
          }) }}

        </form>

      </div>
    </div>
  </div>

{% endblock %}
