{% extends "includes/layout.njk" %}

{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages("declarationSummary.title")) }}
{% endblock %}

{% block mainContent %}

  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <span class="govuk-caption-xl">{{ lrn }}</span>
        <h1 class="govuk-heading-xl">
          {{ messages("declarationSummary.heading") }}
        </h1>

         <p class="govuk-body">
          {{ messages("declarationSummary.p") }}
         </p>

     <h2>
       <span class="app-task-list__section-number">{{ messages("declarationSummary.departureDetails") }}</span>
     </h2>

     <div class="govuk-summary-sectionRows__row">
       <dl class="govuk-summary-list govuk-summary-list govuk-!-margin-bottom-9">
            {% for section in sections %}
                <div class="govuk-summary-list__row">
                  <dt class="govuk-summary-list__value govuk-!-width-one-half">
                   {% if section.href %}
                        {% if section.status == "completed" %}
                           <a class="govuk-link" href={{section.href}} >{{ messages(section.name, messages("site.edit")) }} <span class="govuk-visually-hidden"> {{ messages(section.name, messages("site.edit")) }}</span></a>
                        {% else %}
                           <a class="govuk-link" href={{section.href}} >{{ messages(section.name, messages("site.add")) }} <span class="govuk-visually-hidden"> {{ messages(section.name, messages("site.add")) }}</span></a>
                        {% endif %}
                   {% else %}
                        {{ messages(section.name, messages("site.add")) }}
                   {% endif %}
                  </dt>
                  <dd class="govuk-summary-list__value">
                  </dd>
                    <dd class="govuk-summary-list__actions">
                        {{ messages("site."+section.status) }}
                    </dd>
                </div>
             {% endfor %}
          </dl>
       </div>
          <p class="govuk-body"><a href={{backToTransitMovements}}>{{ messages("declarationSummary.backToTransitMovements")}}</a></p>
      </div>
    </div>
  </div>

{% endblock %}
