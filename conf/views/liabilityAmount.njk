{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}


{% block pageTitle %}
  {{ title(messages("liabilityAmount.title"), form.errors) }}
{% endblock %}

{% block mainContent %}

  {{ govukBackLink({
    text: messages("site.back")
  }) }}


  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

        <form action="{{ routes.controllers.guaranteeDetails.LiabilityAmountController.onSubmit(lrn, mode).url }}" method="post">
        <span class="govuk-caption-xl">{{messages('guaranteeDetails.preHeading')}}</span>

          {{ csrf() | safe }}

          {{ govukInput({
            label: {
              text: messages('liabilityAmount.heading'),
              isPageHeading: true,
              classes: "govuk-label--xl"
            },
            hint: {
              text: messages('liabilityAmount.paragraph'),
              classes: "ctc-hint-as-label"
            },
            name: "value",
            id: "value",
            value: form.value.value,
            classes: "govuk-input--width-10",
            errorMessage: form.value.error,
            prefix: {
              text: "Â£"
            },
            inputMode: "text",
            autocomplete: "off",
            spellcheck: false
          }) }}

          {{ govukButton({
            text: messages("site.continue"),
            attributes: {id:"submit"}
          }) }}

        </form>

      </div>
    </div>
  </div>

{% endblock %}
