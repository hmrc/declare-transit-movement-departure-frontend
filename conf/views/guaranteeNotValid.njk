{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"        import govukBackLink %}
{% from "macros/title.njk"                            import title %}
{% from "govuk/components/button/macro.njk"           import govukButton %}
{% from "govuk/components/summary-list/macro.njk"     import govukSummaryList %}

{% block pageTitle %}
  {{ title(messages("guaranteeNotValid.title")) }}
{% endblock %}

{% block mainContent %}

{{ govukBackLink({
    text: messages("site.back")
  }) }}

  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        <h1 class="govuk-heading-xl">
          {{ messages("guaranteeNotValid.heading") }}
        </h1>

        <p class="govuk-body">{{ messages("guaranteeNotValid"+guaranteeNotValid.code) }}</p>
           <dl class="govuk-summary-list">
                  <div class="govuk-summary-list__row">
                      <dt class="govuk-summary-list__key">
                     {{ messages("guaranteeNotValid.errorCode") }}
                      </dt>
                      <dd class="govuk-summary-list__value">
                      {{ error.errorType }}
                      </dd>
                  </div>
                  <div class="govuk-summary-list__row">
                      <dt class="govuk-summary-list__key">
                     {{ messages("guaranteeNotValid.pointer") }}
                      </dt>
                      <dd class="govuk-summary-list__value">
                      {{ error.pointer }}
                      </dd>
                  </div>
              </dl>


        <p class="govuk-body">{{ messages("guaranteeNotValid.you.must") }}</p>
            <a class="govuk-link" href={{contactUrl}} target="_blank">{{ messages("guaranteeNotValid.contact") }}</a>
      </div>
    </div>
  </div>

{% endblock %}
