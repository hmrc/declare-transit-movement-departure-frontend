{% extends "includes/layout.njk" %}

{% from "govuk/components/back-link/macro.njk"     import govukBackLink %}
{% from "govuk/components/input/macro.njk"         import govukInput %}
{% from "govuk/components/button/macro.njk"        import govukButton %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% from "macros/title.njk"                         import title %}

{% block pageTitle %}
  {{ title(messages("totalPieces.title", displayIndex), form.errors) }}
{% endblock %}

{% block mainContent %}

  {{ govukBackLink({
    text: messages("site.back")
  }) }}

  <div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
      <div class="govuk-grid-column-two-thirds">

        {% if form.errors.length > 0 %}
          {{ govukErrorSummary({
            "titleText": messages("error.summary.title"),
            "errorList": form.errors
          }) }}
        {% endif %}

        <span class="govuk-caption-xl">{{messages('items.preHeading')}}</span>
        <h1 class="govuk-heading-xl">
            {{ messages('totalPieces.heading', displayIndex) }}
        </h1>

        <form action="{{ routes.controllers.addItems.packagesInformation.TotalPiecesController.onSubmit(lrn, itemIndex, packageIndex, mode).url }}" method="post">

          {{ csrf() | safe }}

          {{ govukInput({
            id: "value",
            name: "value",
            type: "tel",
            value: form.value.value,
            classes: "govuk-input--width-10",
            errorMessage: form.value.error
          }) }}

          {{ govukButton({
            text: messages("site.continue"),
            attributes: {id:"submit"}
          }) }}

        </form>

      </div>
    </div>
  </div>

{% endblock %}
